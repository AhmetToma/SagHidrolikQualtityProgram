<script>
    let arry = ['bakimArizaContent', 'gecmisBakimArizaContnet'];
    $('.bakimAriz-listOfAllStokLinks').on('click', 'li', function () {
        $(this).addClass('active').siblings().removeClass('active');
        arry.map(ele => {
            $(`.${ele}`).fadeOut();
        })
        let selectedTableToShow = $(this).attr('data-filter');
        let index = arry[selectedTableToShow];
        arry.splice(index, 1);
        $(`.${selectedTableToShow}`).fadeIn();
        arry.push(selectedTableToShow.toString())
    })
</script>


