                <hr />
                <button  id="btn-purchaseOrderMangemnet-deletePurchasOrdersTable" class="btn btn-sm btn-danger">Delete Table</button>
                <button class="btn btn-sm btn-danger">Reset</button>

            </div>
        </div>
        <div class="col-md-4">
            <label>Back Orders</label>
            <select class="custom-select gunlukHatBazindUretim-select" id="select-purchaseOrderMangemnet-backOrders">
                <option PlanningWO>Yes</option>
                <option>No</option>
                <option>Exculde All Purchase orders</option>
            </select>
            <label>Only Missing Component</label>
            <select class="custom-select gunlukHatBazindUretim-select" id="select-purchaseOrderMangemnet-missingComponent">
                <option >Yes</option>
                <option selected>No</option>
                <option> </option>
            </select>
            <label>Safety Stok</label>
            <select class="custom-select gunlukHatBazindUretim-select" id="select-purchaseOrderMangemnet-safetyStok">
                <option selected>Yes</option>
                <option>No</option>
            </select>
        </div>
        <div class="col-md-2">
            <button id="btn-purchaseOrderMangemnet-weeklyMaterial" class="btn btn-sm btn-dark">Weekly Materila Usage</button>
            <button id="btn-purchaseOrderMangemnet-monthlyMaterial" style="background-color:#48a8b2;color:white" class="btn btn-sm">Monthly Material Usage</button>
        </div>
        <div id="cap2-allWo" style="font-weight:bold;color:black;margin-left:0;margin-bottom:1rem;">
            Toplam Record : <span id="span-purchaseOrderMangemnet-toplamRows" style="color:red"></span>
        </div>
    </div>
    <div style="height: 26rem;
    overflow: auto;
    margin-bottom: 25px">
        <table id="table-purchaseOrderMangemnet-xls" class="table table-bordered">
            <thead>
                <tr>
