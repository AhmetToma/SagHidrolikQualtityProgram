<div class="container-setUp">
    <div class="row">
        <div class="col-md-2">
            <div class="input-group">
                <input id="inp-purchaseOrderMangemnet-lotSize" style="border-radius:0.5rem;" type="number" class="form-control" placeholder="Lot Size">
            </div>
        </div>
        <div class="col-md-4">
            <div>
                <button id="btn-purchaseOrderMangemnet-getAllPurchase" class="btn btn-sm btn-success">Add Other Purchase Orders</button>

                <button id="btn-purchaseOrderMangemnet-exportToExcel" class="btn btn-sm btn-success">export To Excel</button>
                <button id="btn-purchaseOrderMangemnet-runMrp" class="btn btn-sm btn-success">Run Mrp</button>
                <hr />
                <button id="btn-purchaseOrderMangemnet-partOrderSummary" class="btn btn-sm btn-primary">Part Order Summary</button>
                <button id="btn-purchaseOrderMangemnet-newWoList" class="btn btn-sm btn-primary">New Wo List Weekly</button>
                <button id="btn-purchaseOrderMangemnet-woPlanWeekly" class="btn btn-sm btn-primary">Wo plan Weekly</button>
