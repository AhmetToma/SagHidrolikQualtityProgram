<div class="container-review">
    <div class="alert defaultBackground" role="alert">
        Summery of non conformites
    </div>
    <div>
        <div class="row">
            <div class="col-md-3">
                <div class="input-group" style="margin-top:1.7rem">
                    <div class="input-group-prepend">
                        <span class="input-group-text " style="background-color:#e73c68;color:white" id="basic-addon1">STK</span>
                    </div>
                    <input id="inp-review-searchStk" style="border-radius:0.5rem;" type="text" class="form-control" placeholder="ürün kodu">
                </div>
            </div>
            <div class="col-md-3">
                <div class="input-group" style="margin-top:1.7rem">
                    <div class="input-group-prepend">
                        <span class="input-group-text " style="background-color:#e73c68;color:white" id="basic-addon1">reponsible Name</span>
                    </div>
                    <input id="inp-review-responsibleName" style="border-radius:0.5rem;" type="text" class="form-control" placeholder="responsible Name">
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="exampleFormControlSelect1" style="color:black">select table row count : </label>
                    <select style="color:black" class="form-control" id="selectRowCount-review"></select>
                </div>
            </div>
            <div class="col-md-3">
                <div>
                    <label class="demo-form-label">Record Type :</label>
                    <br />
                    <div class="pretty p-icon p-curve p-jelly mt-2 ">
                        <input value="kirmizi" type="radio" name="colorRadio">
                        <div class="state p-success">
                            <i style="margin-top: 5%;" class="icon mdi mdi-check"></i>
                            <label style="font-size: 1rem"> Kırmızı</label>
                        </div>
                    </div>
                    <br />

                    <div class="pretty p-icon p-curve p-jelly mt-2 ">
                        <input value="yesil" type="radio" name="colorRadio">
                        <div class="state p-success">
                            <i style="margin-top: 5%;" class="icon mdi mdi-check"></i>
                            <label style="font-size: 1rem"> Yeşil</label>
                        </div>
                    </div>
                    <br />
                    <div class="pretty p-icon p-curve p-jelly mt-2 mb-4">
                        <input value="all" type="radio" name="colorRadio">
                        <div class="state p-success">
                            <i style="margin-top: 5%;" class="icon mdi mdi-check"></i>
                            <label style="font-size: 1rem"> All</label>
                        </div>
                    </div>



                </div>
            </div>

        </div>
    </div>
    <table class="table table-bordered">
        <caption>Review Toplam: <span style="color:black;font-weight:bold" id="reviewTableCount"></span></caption>
        <thead>
            <tr>
                <th scope="col">NcId</th>
                <th scope="col">Target Date</th>
                <th scope="col">NC Type</th>
                <th scope="col">NC Resposible</th>
                <th scope="col">Part No</th>
                <th scope="col">Nc Open Date</th>
                <th scope="col">Non conformity</th>
                <th scope="col">Nc Status</th>
                <th scope="col">Nc Customer Suplier</th>
                <th scope="col">Department</th>
            </tr>
        </thead>
        <tbody id="table-review"></tbody>
    </table>
    <div class="recordNotFound" id="recordNotFound_review">
        <h3>Hiç bir kayıt Bulunmamktadır</h3>
    </div>
    <nav aria-label="Page navigation example" class="nav-review">
        <ul class="pagination">
            <li class="page-item">
                <a id="btn-review-previous" class="page-link" href="" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only">Previous</span>
                </a>
            </li>
            <li class="page-item"><a id="number-review-pageNumber" class="page-link" href="">1</a></li>
            <li class="page-item">
                <a id="btn-review-next" class="page-link" href="" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only">Next</span>
                </a>
            </li>
        </ul>
    </nav>


</div>

