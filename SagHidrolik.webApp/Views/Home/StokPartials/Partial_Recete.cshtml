<script>

    $(function () {
        $('.bomProcess').css('display', 'block');
    })
    $('#listInStokRecetesi').on('click', 'li', function () {
        $(this).addClass('active').siblings().removeClass('active');
    })
    
    let allclassesArrayInStokRecetesi = ['stokRecetesi', 'bomProcess'];
    $('#listInStokRecetesi').on('click', 'li', function (event) {
        event.preventDefault();
        allclassesArrayInStokRecetesi.map(ele => {
            $(`.${ele}`).fadeOut();
        })
        let selectedTableToShow = $(this).attr('data-filter');
        let index = allclassesArrayInStokRecetesi[selectedTableToShow];
        allclassesArrayInStokRecetesi.splice(index, 1);
        $(`.${selectedTableToShow}`).fadeIn();
        allclassesArrayInStokRecetesi.push(selectedTableToShow.toString())

    })
</script>