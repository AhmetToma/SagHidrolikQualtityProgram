@{
    ViewData["Title"] = "UretimBasla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert defaultBackground"  role="alert">
    Üretim Başlatma
</div>
<div>
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-5 ">
                    <div class="input-group ">
                        <input autofocus type="text" id="inp-uretimBasla-searchUrunNo" class="form-control inclas" placeholder="Ürün No" aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="col-md-5 ">
                    <div class="input-group">
                        <input autofocus type="text" id="inp-uretimBasla-searchlotNo" class="form-control inclas" placeholder="Lot No" aria-describedby="basic-addon1">
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="input-group">
                        <button id="btn-uretimBasla-reset" class="btn btn-danger ">Reset</button>
                    </div>
                </div>
            </div>
            <div class="Table-uretimBasla">
                <table class="table table-bordered  tableHoverDefault">
                    <thead>
                        <tr>
                            <th scope="col">Ürün</th>
                            <th scope="col">Lot No</th>
                            <th scope="col">Process</th>
                            <th scope="col">Miktar</th>
                            <th scope="col">Tarih</th>

                        </tr>
                    </thead>
                    <tbody id="table-uretimInUretim"></tbody>
                </table>
                <div id="recordNotFoundDiv_uretimBasla" class="recordNotFoundDiv">
                    <h3></h3>
                </div>

            </div>
            <div class="uretimBaslaPagination">
                <nav aria-label="Page navigation example" class="nav-review">
                    <ul class="pagination">
                        <li class="page-item">
                            <a id="btn-uretimBasla-pervious" class="page-link" href="" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                            </a>
                        </li>
                        <li class="page-item"><a id="uretimBasla-pageNumner" class="page-link" href="">1</a></li>
                        <li class="page-item">
                            <a id="btn-uretimBasla-next" class="page-link" href="" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </li>
                    </ul>
                </nav>

            </div>
        </div>
        <div style="opacity:0;" class="col-md-6 card">
            <form>
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-6">
                            <label>Ürün Kodu: </label>
                            <input disabled type="text"class="form-control" id="uretimBasla-baslasin-urunKod" aria-describedby="emailHelp">
                        </div>
                        <div class="col-md-6">
                            <label>Ürün LotNo: </label>
                            <input disabled type="text" class="form-control"id="uretimBasla-baslasin-urunLot" aria-describedby="emailHelp">
                        </div>
                    </div>
                </div>
                <div class="form-group processCss">
                    <label class="">Process: </label>
                    <input  disabled type="text" class="form-control" id="uretimBasla-baslasin-process" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label class="">Operator: </label>
                    <select id="uretimBasla-activeOpertors" class="limitedNumbSelect2" multiple="true">
                        <option value=""></option>
                    </select>

                </div>

                <div style="margin-left: 12px;" class="form-group">
                    <label class="">Makine: </label>
                    <select id="uretimBasla-activeMachine" class="limitedNumbSelect2" multiple="true">
                        <option value=""></option>

                    </select>
                </div>
                <div class="form-group">
                    <input style="display:none" value="" disabled class="konrolcss" id="uretimBasla-MakineModel" aria-describedby="emailHelp">
                </div>
                <button id="btn-uretimBasl-submit" style="text-align:center" type="submit" class="btn  btnSubmit">Üretim Başla</button>

            </form>
        </div>


    </div>





</div>



<script>


    $(document).ready(function () {

        $(".limitedNumbSelect2").select2({
            maximumSelectionLength: 1,
            placeholder: "operator Seçiniz"
        })

    });
</script>

